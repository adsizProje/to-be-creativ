{
  "kind": "collectionType",
  "collectionName": "gallery_items",
  "info": {
    "singularName": "gallery-item",
    "pluralName": "gallery-items",
    "displayName": "Gallery Item",
    "description": "Portfolio gallery items for animation, graphic, and savunma categories"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": false
    },
    "description": {
      "type": "text"
    },
    "source": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "videos"
      ]
    },
    "link": {
      "type": "string"
    },
    "category": {
      "type": "enumeration",
      "required": true,
      "enum": [
        "animation",
        "graphic",
        "savunma"
      ]
    },
    "order": {
      "type": "integer",
      "required": true,
      "default": 0,
      "min": 1,
      "max": 6
    }
  }
}
